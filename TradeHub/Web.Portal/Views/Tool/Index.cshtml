@model UserIndexViewModel

@* Filters *@
@* w pole 'new { }' mozna wkladac wlasne atrybuty htmlowe dla formy (wiekszosc elementow ma przeciozana metode o tą wersje) *@
@using ( Html.BeginForm( "Index", "User", FormMethod.Get, new { } ) )
{
    <div>
        <div>
            @Html.LabelFor( m => m.Filters.Login )
            @Html.TextBoxFor( m => m.Filters.Login )
        </div>

        <button type="submit">Filtruj</button>
    </div>
}

<table>
    <thead>
        <tr>
            <th>Login</th>
            <th width="100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var user in Model.Users )
        {
            <tr>
                <td>@user.Login</td>
                <td>
                    <a href="@Url.Action("View", new { Id = user.Id } )">Pokaz profil</a>
                </td>
            </tr>
        }
    </tbody>
</table>



