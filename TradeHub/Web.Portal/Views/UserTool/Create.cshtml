@model ToolViewModel

@using (Html.BeginForm("Create", "UserTool", FormMethod.Post, new { }))
{
    <h3>Required</h3>
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)
        <!--@@Html.ValidationMessageFor(m => m.Name) -->
    </div>
    <div>
        @Html.LabelFor(m => m.Quality)
        @Html.CheckBoxFor(m => m.Quality)
        <!--@@Html.ValidationMessageFor(m => m.Name) -->
    </div>
    <div>
        @Html.LabelFor(m => m.Avaibility)
        @Html.CheckBoxFor(m => m.Avaibility)
        <!--@@Html.ValidationMessageFor(m => m.Name) -->
    </div>
    <div>
        @Html.LabelFor(m => m.Visibility)
        @Html.EnumDropDownListFor(m => m.Visibility)
        <!--@@Html.ValidationMessageFor(m => m.Name) -->
    </div>
    //<div>
    //    @Html.LabelFor(m => m.Location)
    //    @Html.TextBoxFor(m => m.Location)
    //    <!--@@Html.ValidationMessageFor(m => m.Location)-->
    //</div>

    <h3>Optional</h3>
    <br />
    <div>
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description)
    </div>


    <div>
        <button type="submit">Add tool</button>
    </div>
}



