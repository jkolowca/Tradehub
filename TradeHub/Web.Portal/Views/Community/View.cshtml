@model CommunityViewModel

<div>
    <div>
        @Html.NameFor(m => m.Name)
        @Model.Name
    </div>

    <div>
        @Html.NameFor(m => m.Location)
        @Model.Location
    </div>

    <div>
        @Html.NameFor(m => m.Description)
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            @Model.Description
        }
    </div>

    @using (Html.BeginForm("Join", "UserCommunities", FormMethod.Post))
    {
        <input type="hidden" name="CommunityId" value="@Model.Id">
        <button type="submit">Join</button>
    }

    @using (Html.BeginForm("Leave", "UserCommunities", FormMethod.Post))
    {
        <input type="hidden" name="CommunityId" value="@Model.Id">
        <button type="submit">Leave</button>
    }

    <div>
        @Html.ActionLink("Browse Community Tools", "Index", "CommunityTool", new { communityId = Model.Id }, new { })
    </div>

</div>

