@model ToolIndexViewModel
<div class="page-title" style="margin-top:7%;">
    <h2 style="color: white;">
        Tools belonging to:
    </h2>
    <h3 style="color:white;">
        @ViewData["CommunityName"]
    </h3>
</div>

<div class="site-content subpage">

    @using (Html.BeginRouteForm(routeName: "CommunityTools",
                                     routeValues: new { communityId = ViewData["Id"] },
                                     method: FormMethod.Get))
    {
        <div>
            <div>
                @Html.LabelFor(m => m.Filters.Name)
                @Html.TextBoxFor(m => m.Filters.Name)
            </div>

            <button class="menu-button button bg-dark radius" style="width: 20%;" type="submit">Search</button>
        </div>
    }
    <hr />

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th width="200px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tool in Model.Tools)
            {
                <tr>
                    <td>@tool.Name</td>
                    <td>

                        @using ( Html.BeginRouteForm( routeName: "CommunityTool",
                                                     routeValues: new { communityId = ViewData["Id"], toolId = tool.Id },
                                                     method: FormMethod.Get ) )
                        {
                            <button  class="menu-button button bg-dark radius" style="width: 100%;" type="submit">View Tool</button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
    </div>
