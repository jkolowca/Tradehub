@model CommunityIndexViewModel
<div class="page-title">
    <h2 style="color: white;">
        Your communities:
    </h2>
</div>

<div class="site-content subpage">
    <table>
        <thead>
            <tr>
                <th width="100px">Name</th>
                <th width="100px">Location</th>
                <th width="500px">Description</th>
                <th width="100px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var community in Model.Communities)
            {
                <tr>
                    <td>@community.Name</td>
                    <td>@community.Location</td>
                    <td>@community.Description</td>
                    <td>
                        @Html.RouteLink( linkText: "View Community",
                                                   routeName: "Community",
                                                   routeValues: new { communityId = community.Id } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    @using (Html.BeginRouteForm(routeName: "UserCommunities",
                                  method: FormMethod.Get))
    {
        <div style="max-width:50%;">
            <div>
                @Html.LabelFor(m => m.Filters.Name)
                @Html.TextBoxFor(m => m.Filters.Name)
            </div>

            <div>
                @Html.LabelFor(m => m.Filters.Location)
                @Html.TextBoxFor(m => m.Filters.Location)
            </div>

            <button class="menu-button button bg-dark radius" style="width: 40%;" type="submit">Filter</button>
        </div>

    }
    <hr />
    @using (Html.BeginRouteForm(routeName: "Communities",
                                  method: FormMethod.Get))
    {
        <button class="menu-button button bg-dark radius" style="width: 20%;" type="submit">Browse Communities</button>
    }
</div>
