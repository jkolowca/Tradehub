@model TransactionIndexViewModel

<div class="page-title" style="margin-top:7%;">
    <h2 style="color: white;">
        Transactions in which you are lending someone your tool
    </h2>
</div>

<div class="site-content subpage">

    @if ( Model.Transactions.Count == 0 )
    {
        <h1>You are currently not lending any tools</h1>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Lend To</th>
                    <th>Lend Tool</th>
                    <th>Offered Tool</th>

                    <th width="200"></th>
                    <th width="200"></th>
                </tr>
            </thead>
            <tbody>
                @foreach ( var transaction in Model.Transactions )
                {
                    <tr>
                        <td>@transaction.BorowerName</td>
                        <td>@transaction.LenderToolName</td>
                        <td>@transaction.BorowerToolName</td>

                        <td>
                            @using ( Html.BeginRouteForm( routeName: "Transaction",
                                                          routeValues: new { transactionId = transaction.Id },
                                                          method: FormMethod.Get ) )
                            {
                                <button type="submit">Details</button>
                            }
                        </td>

                        <td>
                            @using ( Html.BeginRouteForm( routeName: "FinishTransaction",
                                                         routeValues: new { transactionId = transaction.Id },
                                                         method: FormMethod.Get ) )
                            {
                                <button type="submit">Mark as finished</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>