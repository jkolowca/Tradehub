<section class="left">
    <ul class="top-menu border border-dark border-right-0 border-bottom-0 border-top-0 pt-5 list-unstyled">
        <li>
            <a href="@Url.Action("Index", "Home")" class="text-black-50">Home</a>
        </li>
        <li>
            <a href="@Url.Action("About", "Home")" class="text-black-50">About</a>
