<!DOCTYPE html>
<html lang="en" style="font-family: Anaheim;">
<head>
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.3/css/foundation.min.css">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <title>TradeHub</title>
</head>
<body>
    <nav data-topbar>
        @Html.Partial("UserPanel")
    </nav>
    <div class="button-bar flex-column d-flex">
        @Html.Partial("Menu")
    </div>
    <div class="small-banner"></div>
    <div class="content-area">
       @RenderBody()
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.3/js/foundation.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/FoundationScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
