<!DOCTYPE html>
<html lang="en" style="font-family: Anaheim;">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>TradeHub</title>
    <!-- Bootstrap core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="starter-template.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.3/css/foundation.min.css">
</head>
<body>
    <nav data-topbar style="height: 40%; background-color: #f9f1b7; padding-left: 7%; padding-right:15%; ">
        @Html.Partial("UserPanel")
    </nav>
    <div class="button-bar flex-column d-flex" style="float: left; margin-left: 7%; top: 32%; position: absolute; width: 8%;">
        @Html.Partial("Menu")
    </div>
    <div class="scrollable bg-light" style="width: 75%; top: 28%; min-height: 70%; margin-left: 18%; padding: 5%; position: absolute;">
        @RenderBody()
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.3/js/foundation.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/FoundationScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
