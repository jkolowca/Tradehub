@model ToolIndexViewModel

<h1>Tools belonging to:</h1>
<h2>@ViewData[ "CommunityName"]</h2>

@using ( Html.BeginForm( "Index", "CommunityTool", FormMethod.Get, new { } ) )
{
    <div>
        <div>
            @Html.LabelFor( m => m.Filters.Name )
            @Html.TextBoxFor( m => m.Filters.Name )
        </div>

        <button type="submit">Search</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th width="100px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach ( var tool in Model.Tools )

            {
                <tr>
                    <td>@tool.Name</td>
                    <td>
                        <!--Todo:  viewing tool and reservation-->
                        <a href="@Url.Action("View", new { Id = tool.Id })">View</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}